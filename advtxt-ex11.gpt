algoritmo JogoMorbius;

variáveis
    i, j, k : inteiro;
fim-variáveis

início
    imprima("Ola, seja bem vindo ao jogo Morbius!!\n Para comecar a jogar digite\n 1\n para sair digite\n 2\n");

    enquanto i <> 1 e i <> 2 faça
        imprima("Digite sua escolha (1 ou 2): ");
        leia := i;
        se i <> 1 e i <> 2 então
            imprima("Digite um valor aceitável: 1 ou 2.\n");
        fim-se
    fim-enquanto

    se i = 1 então
        imprima("Morbius eh um mini RPG de texto, cujas acoes sao decididas por meio dos numeros que voce digitar\n");
        imprima("Prepare-se para esta aventura!\n\n\n");
        imprima("Você e seu grupo fazem parte de um mundo onde a ciência e o sobrenatural se misturam de maneira perigosa.\n");
        imprima("Dr. Michael Morbius, um brilhante cientista, foi transformado em uma criatura vampírica ao tentar curar sua rara doença sanguínea.\n");
        imprima("Agora, a cidade de Nova York está abalada por ataques noturnos, enquanto boatos sobre um vampiro vivo se espalham pelas ruas.\n");
        imprima("Vocês estão procurando abrigo e encontram um prédio aberto, ele tem o nome de Laboratório Horizon, todos se entreolham e decidem entrar.\n");
        imprima("Dentro do laboratório vocês encontram diversas gavetas e seus amigos começam a procurar utensílios nelas.\n");
        imprima("Você abre uma gaveta e vê os seguintes itens:\n 1. Erlenmeyer com sangue dentro\n 2. Uma estaca\n\n");

        enquanto j <> 1 e j <> 2 faça
            imprima("Digite sua escolha (1 ou 2): ");
            leia :-= j;
            se j <> 1 e j <> 2 então
                imprima("Digite um valor aceitável: 1 ou 2.\n");
            fim-se
        fim-enquanto

        se j = 1 então
            imprima("Vocês conseguiram uma amostra do sangue de Morbius, poderá ser usado para fazer um antídoto contra o vampiro!!!\n");
            imprima("Um de seus amigos é cientista e consegue fazer um antídoto.\n");
            imprima("Todos escutam um forte barulho vindo de fora.\n\n");
            imprima("1. Vocês saem para descobrir o que aconteceu.\n");
            imprima("2. Ficar e ajudar com o antídoto.\n\n");

            enquanto k <> 1 e k <> 2 faça
                imprima("Digite sua escolha (1 ou 2): ");
                leia := k;
                se k <> 1 e k <> 2 então
                    imprima("Digite um valor aceitável: 1 ou 2.\n");
                fim-se
            fim-enquanto

            se k = 1 então
                imprima("Morbius aparece e ataca todos vocês.\n Infelizmente você e seu grupo morreram tendo seus sangues sugados por Morbius!!!\n\n GAME OVER!\n\n");
            senão
                imprima("Morbius invade o prédio e fareja todos vocês!\n");
                imprima("Por sorte, seu amigo consegue terminar o antídoto!\n");
                imprima("Morbius os ataca, mas vocês atiram o antídoto nele.\n");
                imprima("Parabéns, vocês salvaram a cidade de Nova York!\n\n Você venceu!\n\n");
            fim-se

        senão
            imprima("Você achou uma estaca e acreditou que estava vivendo em um dos contos de vampiros comuns.\n\n");
            imprima("Morbius te encontrou!\n\n");
            imprima("Ao usar sua estaca no vampiro, você tem o azar de descobrir que ele resistiu!\n");
            imprima("Você morreu e seu grupo também!\n\n GAME OVER\n\n");
        fim-se

    senão
        imprima("Até uma próxima!\n");
    fim-se

fim

